<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">org.sqlite.JDBC</property>
        <property name="hibernate.connection.url">jdbc:sqlite:lesson_management.db</property>
        <property name="hibernate.dialect">org.hibernate.dialect.SQLiteDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        
        <!-- JDBC connection pool settings ... using built-in test pool -->
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>

        <!-- Specify your annotated classes here -->
        <mapping class="com.example.Admin"/>
        <mapping class="com.example.Bookings"/>
        <mapping class="com.example.BookingsCatalog"/>
        <mapping class="com.example.City"/>
        <mapping class="com.example.DatabaseSetup"/>
        <mapping class="com.example.Instructor"/>
        <mapping class="com.example.Location"/>
        <mapping class="com.example.LocationsCatalog"/>
        <mapping class="com.example.Minor"/>
        <mapping class="com.example.Offering"/>
        <mapping class="com.example.OfferingCatalog"/>
        <mapping class="com.example.Schedule"/>
		<mapping class="com.example.SpaceSpecializationMap"/>
		<mapping class="com.example.Timeslot"/>
		<mapping class="com.example.User"/>
		<mapping class="com.example.UserCatalog"/>
		
    </session-factory>
</hibernate-configuration>
